extends layout

block content
  .container
    .row
      .col-md-6
        img.img-fluid(src=`/${produto.imagemUrl}` || 'https://via.placeholder.com/600x400', alt=`Imagem de ${produto.nome}`)
      .col-md-6
        h1= produto.nome
        p.lead Descrição: #{produto.descricao}
        p.preco Preço: R$ #{produto.preco}
        p Categoria: #{produto.categoria}
        p Disponibilidade: #{produto.disponibilidade}
         // Botão de compra
        a.btn.btn-primary(href=`/compra/${produto.id}`) Comprar

        // Botão de editar - Só visível para administradores
        if isAdmin
          a.btn.btn-warning.ml-3(href=`/produto/${produto.id}/editar`) Editar
        a.btn.btn-primary.ml-3(href=`/home`) Voltar

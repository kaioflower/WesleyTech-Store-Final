extends layout

block content
  .container
    h2 Editar Promoção
    form(method='POST', action=`/admin/promocoes/${promocao._id}/editar`, enctype='multipart/form-data')
      .form-group
        label(for='titulo') Título da Promoção:
        input.form-control(type='text', name='titulo', id='titulo', value=promocao.titulo, required)

      .form-group
        label(for='descricao') Descrição:
        textarea.form-control(name='descricao', id='descricao', rows='3')= promocao.descricao

      .form-group
        label(for='imagemUrl') URL da Imagem:
        input.form-control(type='text', name='imagemUrl', id='imagemUrl', value=promocao.imagemUrl)

      .form-group
        label(for='precoOriginal') Preço Original:
        input.form-control(type='number', step='0.01', name='precoOriginal', id='precoOriginal', value=promocao.precoOriginal, required)

      .form-group
        label(for='precoPromocional') Preço Promocional:
        input.form-control(type='number', step='0.01', name='precoPromocional', id='precoPromocional', value=promocao.precoPromocional, required)

      button.btn.btn-primary(type='submit') Atualizar Promoção
      a.btn.btn-secondary(href='/admin/promocoes') Cancelar

extends layout

block content
  .container
    .d-flex.justify-content-between.mb-4
      h2 Promoções Cadastradas
      a.btn.btn-success(href='/admin/cadastro/promocao') + Nova Promoção

    .row
      each promocao in promocoes
        .col-md-4
          .card.mb-4   
            img.card-img-top(src=`/${promocao.imagemUrl}`, alt=`Imagem de ${promocao.nome}`)
            .card-body
              h5.card-title= promocao.titulo
              p.card-text= promocao.descricao
              a.btn.btn-warning.btn-block(href=`/admin/promocoes/${promocao.id}/editar`) Editar
              form(method='POST', action=`/admin/promocoes/${promocao.id}/deletar`)
                button.btn.btn-danger.btn-block(type='submit') Remover

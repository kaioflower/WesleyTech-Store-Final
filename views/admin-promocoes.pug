extends layout

block content
  .container
    h2.text-center Promoções Cadastradas

    .row
      each promocao in promocoes
        .col-md-4
          .card.mb-4
            if promocao.tipo === 'imagem'
              img.card-img-top(src=promocao.mediaUrl, alt=`Promoção: ${promocao.titulo}`)
            else if promocao.tipo === 'video'
              video.card-img-top(controls)
                source(src=promocao.mediaUrl, type='video/mp4')
                Your browser does not support the video tag.
            .card-body
              h5.card-title= promocao.titulo
              p.card-text= promocao.descricao
              if promocao.dataFim
                small.text-muted Expira em #{promocao.dataFim}
              a.btn.btn-warning(href=`/admin/promocoes/${promocao.id}/editar`) Editar
              form(method='POST', action=`/admin/promocoes/${promocao.id}/deletar`)
                button.btn.btn-danger(type='submit') Remover
